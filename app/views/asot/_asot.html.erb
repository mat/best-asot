<%
  top_ten = nil unless defined?(top_ten)
  top_ten = nil if local_assigns[:top_ten].nil?
%>
 <tr class="<%= cycle("even", "odd") -%>">
 <% if (1..5).include? asot.yearrank and not top_ten -%>
  <td class="rank_<%= asot.yearrank -%>"><%= asot.no %></td>
 <% else -%>
  <td class='no'><%= asot.no %></td>
 <% end -%>
  <td><%= asot.airdate.strftime("%d-%b-%Y") %></td>
   <td><%= asot.rank %></td>
  <% unless top_ten -%>
   <% if (1..5).include? asot.yearrank -%>
   <td class="rank_<%= asot.yearrank -%>"><%= asot.yearrank %></td>
   <% else -%>
   <td><%= asot.yearrank %></td>
   <% end -%>
 <% end -%>
 <td><%= link_to(asot.votes, asot.url, :target => '_blank') %></td>
  <td class='left'><%= h asot.notes %></td>
 </tr>
