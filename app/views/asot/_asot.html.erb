<%
  hide_yearrank = nil unless defined?(hide_yearrank)
  hide_yearrank = nil if local_assigns[:hide_yearrank].nil?
%>

 <tr class="<%= cycle("even", "odd") -%>">
  <td><%= asot.no %>
  </td>
  <td>
  <% if asot.airdate %> 
   <%= asot.airdate.strftime("%d-%b-%Y") %>
  <% end %>
  </td>
  <td><%= asot.rank %></td>
  <% unless hide_yearrank -%>
  <td><%= asot.yearrank %></td>
  <% end -%>
  <% unless asot.url %> 
  <td>with <%= asot.votes %> votes</td>
  <% else %>
  <td><%= link_to(asot.votes, asot.url, :target => '_blank') %></td>
  <% end %>
  <td><%= h asot.notes %></td>
 </tr>
