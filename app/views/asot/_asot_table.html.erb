<%
  top_ten = nil unless defined?(top_ten)
  top_ten = nil if local_assigns[:top_ten].nil?
%>

<table>
 <tr>
  <th>#</th>
  <th><%= link_to_if(by_votes? && !top_ten, "Airdate", index_path(:anchor => y.to_s)) %></th>
  <th>Rank</th>
  <% unless top_ten -%>
  <th>Year <br />Rank</th>
  <% end -%>
  <th><%= link_to_if(by_airdate? && !top_ten, "Votes", byvotes_path(:anchor => y.to_s)) %></th>
  <th>Notes</th>
 </tr>
  <%= render :partial => 'asot', :collection => asots, :locals => {:top_ten => top_ten} %>
</table>

